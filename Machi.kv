MDBoxLayout:
    orientation: "vertical"

    MDToolbar:
        title: "Machi"
        elevation: 12
        type: "top"
        right_action_items: [["penguin", lambda github: app.open_repo()]]

    MDBottomNavigation:

        MDBottomNavigationItem:
            text:"Import"
            icon:'import'
            name:'import_screen'
            MDBoxLayout:
                orientation:'vertical'
                MDBoxLayout:
                    orientation:'vertical'
                    size_hint_y:1.6
                    padding: 20
                    spacing: 30
                    MDLabel:
                        size_hint_y:0.3
                        text:"Add Input"
                        halign: "center"
                        font_style: 'H3'
                    ScrollView:
                        do_scroll_x: False
                        do_scroll_y: True
                        MDLabel:
                            text:""
                            id: input_lister_text
                            halign: "left"
                            size_hint_y: None
                            height: self.texture_size[1]
                            text_size: self.width, None
                MDGridLayout:
                    cols: 2
                    padding: 20
                    spacing: 20
                    MDRectangleFlatIconButton:
                        size_hint_y:.6
                        size_hint_x:1
                        icon: 'image-plus'
                        text: 'Add Files'
                        font_name: "RobotoBlack"
                        font_style: "Button"
                        line_width: 1.1
                        on_release:
                            app.file_chooser()
                    MDRectangleFlatIconButton:
                        size_hint_y:.6
                        size_hint_x:1
                        text: 'Copy output\n to input'
                        icon: 'content-copy'
                        font_name: "RobotoBlack"
                        font_style: "Button"
                        line_width: 1.1
                        on_release:
                            app.output_to_input()
                    MDRectangleFlatIconButton:
                        size_hint_y:.6
                        size_hint_x:1
                        text: 'Clear\ninput\nfolder'
                        icon: 'trash-can-outline'
                        font_name: "RobotoBlack"
                        font_style: "Button"
                        line_width: 1.1
                        on_release:
                            app.flush_input()
                    MDRectangleFlatIconButton:
                        size_hint_y:.6
                        size_hint_x:1
                        icon: 'trash-can'
                        text: 'Clear\noutput\nfolder'
                        font_name: "RobotoBlack"
                        font_style: "Button"
                        line_width: 1.1
                        on_release:
                            app.flush_output()
        MDBottomNavigationItem:
            text:"Stitch"
            name:"stitch_sceen"
            icon:'filmstrip'
            MDBoxLayout:
                orientation:'vertical'
                MDBoxLayout:
                    orientation:'vertical'
                    size_hint_y:1.6
                    padding: 20
                    spacing: 30
                    MDLabel:
                        text:"Stitch"
                        halign: "center"
                        font_style: 'H3'
                    MDTextField:
                        id: output-name-box
                        icon_right: 'rename-box'
                        icon_right_color: "#EC407A"
                        hint_text: "Output prefix"
                        helper_text: "Default is Machi-"
                        helper_text_mode: "persistent"
                        mode: "rectangle"
                        color_mode: "custom"
                        pos_hint: {"center_x":0.5, "center_y":0.1}
                        size_hint_x: .92
                        on_text_validate:
                            app.set_prefix(*args)

                MDGridLayout:
                    cols: 2
                    padding: 20
                    spacing: 20
                    
                    MDRectangleFlatIconButton:
                        size_hint_y:1
                        size_hint_x:1
                        text: 'Stitch\nDirection:\nDown'
                        icon: 'arrow-down-box'
                        font_name: "RobotoBlack"
                        font_style: "Button"
                        line_width: 1.1
                    MDRectangleFlatIconButton:
                        size_hint_y:1
                        size_hint_x:1
                        icon: 'filmstrip'
                        text: 'Stitcher'
                        font_name: "RobotoBlack"
                        font_style: "Button"
                        line_width: 1.1
                        on_release:
                            app.call_stitcher()
                            
                    MDRectangleFlatIconButton:
                        size_hint_y:1
                        size_hint_x:1
                        text: 'Smart\nStitcher'
                        icon: 'led-strip-variant'
                        font_name: "RobotoBlack"
                        font_style: "Button"
                        line_width: 1.1
                        on_release:
                            app.call_smart_stitcher()
                    
                    MDRectangleFlatIconButton:
                        size_hint_y:1
                        size_hint_x:1
                        text: 'Help'
                        icon: 'information'
                        font_name: "RobotoBlack"
                        font_style: "Button"
                        line_width: 1.1

        MDBottomNavigationItem:
            text:"Split"
            name:"split_screen"
            icon:'scissors-cutting'
            MDBoxLayout:
                orientation:'vertical'
                MDBoxLayout:
                    orientation:'vertical'
                    size_hint_y:1.6
                    padding: 20
                    spacing: 30
                    MDLabel:
                        text:"Split"
                        halign: "center"
                        font_style: 'H3'
                    MDTextField:
                        id: output-name-box
                        icon_right: 'rename-box'
                        icon_right_color: "#EC407A"
                        hint_text: "Output prefix"
                        helper_text: "Default is Machi-"
                        helper_text_mode: "persistent"
                        mode: "rectangle"
                        color_mode: "custom"
                        pos_hint: {"center_x":0.5, "center_y":0.1}
                        size_hint_x: .92
                        on_text_validate:
                            app.set_prefix(*args)

                MDGridLayout:
                    cols: 2
                    padding: 20
                    spacing: 20
                    
                    MDRectangleFlatIconButton:
                        size_hint_y:1
                        size_hint_x:1
                        text: 'Split\nDirection:\nDown'
                        icon: 'arrow-down-box'
                        font_name: "RobotoBlack"
                        font_style: "Button"
                        line_width: 1.1
                            
                    MDRectangleFlatIconButton:
                        size_hint_y:1
                        size_hint_x:1
                        text: 'Splitter'
                        icon: 'content-cut'
                        font_name: "RobotoBlack"
                        font_style: "Button"
                        line_width: 1.1

                    MDRectangleFlatIconButton:
                        size_hint_y:1
                        size_hint_x:1
                        icon: 'scissors-cutting'
                        text: 'Smart\nSplitter'
                        font_name: "RobotoBlack"
                        font_style: "Button"
                        line_width: 1.1
                        on_release:
                            app.call_splitter()
                    
                    MDRectangleFlatIconButton:
                        size_hint_y:1
                        size_hint_x:1
                        text: 'Help'
                        icon: 'information'
                        font_name: "RobotoBlack"
                        font_style: "Button"
                        line_width: 1.1

        MDBottomNavigationItem:
            text:"Options"
            name:'options_screen'
            icon:'tune'
            MDFloatLayout:
                MDLabel:
                    text:"hehe"
                MDRectangleFlatIconButton:
                    text: 'Change\nTheme'
                    pos_hint: {"center_x":0.5, "center_y":0.6}
                    icon: 'brush'
                    font_name: "RobotoBlack"
                    font_style: "Button"
                    line_width: 1.1
                    on_release:
                        app.show_theme_picker()